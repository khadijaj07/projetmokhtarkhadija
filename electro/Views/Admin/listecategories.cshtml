@model IEnumerable<electro.Models.Categorie>

@{
    ViewData["Title"] = "Liste de Catégories";
}

<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <h1>Liste de Catégories</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <p>
        <a class="btn btn-primary" asp-action="ajoutercategorie">Créer une nouvelle catégorie</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="EditCat" asp-route-id="@item.Id">Éditer</a>
                       
                        <a class="btn btn-sm btn-danger" asp-action="Deletecategorie" asp-route-id="@item.Id">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="Index">Back to List</a>
<style>
    .breadcrumb-section {
        background: #f5f5f5;
        padding: 40px 0;
        text-align: center;
    }

    .breadcrumb-text h1 {
        font-size: 36px;
        font-weight: 700;
        color: #333;
    }

    .table {
        margin-top: 20px;
    }

        .table th, .table td {
            vertical-align: middle;
        }

    .btn-sm {
        margin-right: 5px;
    }
</style>
