@model IEnumerable<electro.Models.Commande>

@{
    ViewData["Title"] = "Liste des Commandes";
}

<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <h1>Liste des Commandes</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Dropdown list to select user ID -->
<div class="container mt-4">
    <form asp-action="listecommande" asp-controller="Admin" method="get">
        <div class="form-group">
            <label for="userId">Select User:</label>
            @Html.DropDownList("userId", (SelectList)ViewBag.Users, "All", new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>
</div>

<a asp-action="ClientsFideles" asp-controller="Admin" class="btn btn-sm btn-danger">Best Clients</a>
<div class="container mt-4">
 
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.DateCommande)</th>
                <th>@Html.DisplayNameFor(model => model.Etat)</th>
                <th>@Html.DisplayNameFor(model => model.UtilisateurId)</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DateCommande)</td>
                    <td>@Html.DisplayFor(modelItem => item.Etat)</td>
                    <td>@Html.DisplayFor(modelItem => item.UtilisateurId)</td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="Index">Back to List</a>
<style>
    .breadcrumb-section {
        background: #f5f5f5;
        padding: 40px 0;
        text-align: center;
    }

    .breadcrumb-text h1 {
        font-size: 36px;
        font-weight: 700;
        color: #333;
    }

    .table {
        margin-top: 20px;
    }

        .table th, .table td {
            vertical-align: middle;
        }

    .btn-sm {
        margin-right: 5px;
    }
</style>
