                <div class="breadcrumb-text">
                    <h1>espace admin</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<ul class="admin-menu">
    <li>
        <a asp-area="" asp-controller="Admin" asp-action="listecategories">gestion categorie</a>
    </li>
    <li>
